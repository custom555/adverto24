<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0003-1" author="krzysztof.kaszewski">
        <createTable tableName="advertisment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints unique="true"/>
            </column>
            <column name="body" type="VARCHAR(10000)"/>
            <column name="created" type="TIMESTAMP"/>
            <column name="promoted" type="BOOLEAN"/>
            <column name="owner_id" type="BIGINT">
                <constraints
                    nullable="false"
                    foreignKeyName="fk_advertisment_owner"
                    referencedTableName="application_user"
                    referencedColumnNames="id"
                />
            </column>
            <column name="category_id" type="BIGINT">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_advertisment_category"
                        referencedTableName="category"
                        referencedColumnNames="id"
                />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>